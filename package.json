{
  "devDependencies": {
    "@types/node": "^20.14.12",
    "concurrently": "^7.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "scripts": {
    "dev": "concurrently \"yarn dev:api\" \"yarn dev:ui\"",
